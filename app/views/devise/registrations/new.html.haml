:javascript
  document.getElementById('navbar-display').style.display = 'none';
%title Register
.logincss
  %body{:style=>'background-image:url("../assets/login-bg.jpg");background-color:gray;	background-attachment: fixed;background-size:cover;background-repeat:no-repeat;'}
    .box{:style => "margin-top: 3.5%; color: white"}
      %a{:href => "https://rails-image-sharing-night0nly.c9users.io"}
        =image_tag("cwl2.png",:height => "65px",:style => "display:block;margin:0 auto 20")
      = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        // = f.error_notification
        = devise_error_messages!
        .form-group
          .form-input
            .form-input-heading
              = f.email_field :email, required: true, autofocus: true, placeholder:"Your Email", type: "email",class: 'form-control input-lg control-label'
        .form-group
          = f.text_field :user_name , required: true, placeholder:"Your User Name", type:'text_field',class: 'form-control input-lg'
        .form-group
          = f.password_field :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),placeholder:"Password",type:"password",class: 'form-control input-lg'
        .form-group
          = f.password_field:password_confirmation, required: true,type:"password",placeholder:"Enter your password again", class:'form-control input-lg'
        .form-actions
          = f.button :submit, "Sign up", class:'btn btn-info btn-wide', style:"margin-bottom:15px"
      .log-in
        = render "devise/shared/links"
