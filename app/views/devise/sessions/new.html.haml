:javascript
  document.getElementById('navbar-display').style.display = 'none';
%title Sign in
.logincss
  %body{:style=>'background-image:url("../assets/login-bg.jpg");background-color:gray;	background-attachment: fixed;background-size:cover;background-repeat:no-repeat;'}
    .box{:style => "margin-top: 3.5%"}
      %a{:href => "https://rails-image-sharing-night0nly.c9users.io"}
        =image_tag("cwl2.png",:height => "65px",:style => "margin-bottom :20px")
      = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .form-group
          = f.email_field :email, required: false, autofocus: true, placeholder:"Your Email", type: "email",class: 'form-control input-lg'
        = f.password_field :password, required: false, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),placeholder:"Password",type:"password",class: 'form-control input-lg',style: "margin-bottom: 20px;"
        = f.input :remember_me, as: :boolean if devise_mapping.rememberable?
        .form-actions
          = f.button :submit, "Log in",class:'btn btn-info btn-wide'
      = render "devise/shared/links"
