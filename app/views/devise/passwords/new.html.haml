:javascript
  document.getElementById('navbar-display').style.display = 'none';
.logincss
  .box{:style => "width: 500px; margin-top: 5%;"}  
    %a{:href => "https://rails-image-sharing-night0nly.c9users.io"}
      =image_tag("cwl2.png",:height => "65px",:style => "display:block;margin:0 auto 20; margin-bottom: 40px;")
    //%h2 Forgot your password?
    = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
      = f.error_notification
      .form-group
        .form-input-heading
          = f.email_field :email, required: true, autofocus: true, placeholder:"Your Email", type: "email",class: 'form-control input-lg control-label'
      .form-actions
        = f.button :submit, "Send me reset password instructions", class:'btn btn-info btn-wide', style:"margin-bottom:10px; margin-top: 5px;"
      = render "devise/shared/links"